---
import "../styles/global.css";
import Topbar from "../components/navigation/Topbar.astro";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
const currentPath = Astro.url.pathname;
const showTopbar = currentPath !== "/" && !currentPath.startsWith("/auth");
const { user } = Astro.locals;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    {showTopbar && <Topbar currentPath={currentPath} user={user} />}
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
